<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    <title>DISQUS Code Blog</title>
    <link href="http://code.disqus.com/atom.xml" rel="self"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://code.disqus.com/</id>

    {% for post in site.posts limit:10 %}
        <entry>
            <title>{{ post.title | xml_escape }}</title>
            <link href="http://code.disqus.com{{ post.url }}"/>
            <updated>{{ post.date | date_to_xmlschema }}</updated>
            <id>id:{{ post.id | xml_escape }}</id>
            <content type="html">{% if post.summary %}{{ post.summary | xml_escape }}{% else %}{{ post.content | strip_html | truncate: 300 | xml_escape }}{% endif %}</content>
        </entry>
    {% endfor %}
</feed>